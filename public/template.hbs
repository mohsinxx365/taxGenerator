        <table>
            <tr>
                <th>Service Type</th>
                <th>Gross Payment Amount</th>
                <th>Withholding Tax Rate</th>
                <th>Amount Tax WithHeld</th>
            </tr>
            <tr>
                <td>{{serviceType}}</td>
                <td>{{currency}} {{grossAmt}}</td>
                <td>{{taxRate}}</td>
